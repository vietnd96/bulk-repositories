    <artifactId>scm-helpers-tag</artifactId>
    <version>${revision}</version>
    <name>SCM Helper Tag</name>
    <description>POM is used to perform tag/untag and push changes to all dependency repositories in oneshot.
        Usage: mvn initialize -Dgit=tag -DpushChanges=true -Dname=RELEASENAME
    </description>
    <packaging>pom</packaging>

    <properties>
        <name>${revision}</name>
        <goal>tag</goal>
        <pushChanges>false</pushChanges>
    </properties>

    <profiles>
        <profile>
            <id>tag-${repositoryRoot}</id>
            <activation>
                <property>
                    <name>repositoryRoot</name>
                    <value>!</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <version>${maven-scm-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>tag-${repositoryRoot}</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>${tag.goal}</goal>
                                </goals>
                                <configuration>
                                    <tag>${tag.name}</tag>
                                    <basedir>${project.parent.basedir}</basedir>
                                    <connectionUrl>scm:git:${remote.url}/${repositoryRoot}.git
                                    </connectionUrl>
                                    <workingDirectory>${project.parent.basedir}</workingDirectory>
                                    <pushChanges>${tag.pushChanges}</pushChanges>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

