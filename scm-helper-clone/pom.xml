    <artifactId>scm-helpers-clone</artifactId>
    <version>${revision}</version>
    <name>SCM Helper Clone</name>
    <description>POM is used to perform clone all dependency repositories in oneshot.
        Usage: mvn initialize -Dhelper=clone
    </description>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>clone-${repository0}</id>
            <activation>
                <property>
                    <name>repository0</name>
                    <value>!</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <version>${maven-scm-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>clone-${repository0}</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <basedir>${project.parent.basedir}</basedir>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                    <checkoutDirectory>${project.parent.basedir}/${repository0}</checkoutDirectory>
                                    <connectionUrl>scm:git:${remote.url}/${repository0}.git
                                    </connectionUrl>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

