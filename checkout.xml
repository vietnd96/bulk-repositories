    <profiles>
        <profile>
            <id>checkout-${repository0}</id>
            <activation>
                <property>
                    <name>repository0</name>
                    <value>!</value>
                </property>
                <file>
                    <missing>${repository0}/pom.xml</missing>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <version>${maven-scm-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>checkout-${repository0}</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <basedir>${project.basedir}</basedir>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                    <checkoutDirectory>${project.basedir}/${repository0}</checkoutDirectory>
                                    <connectionUrl>scm:git:${remote.url}/${repository0}.git
                                    </connectionUrl>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

