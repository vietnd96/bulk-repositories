<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ndviet</groupId>
    <artifactId>fs-test-automation</artifactId>
    <version>${revision}</version>
    <name>FS Test Automation Project</name>

    <properties>
        <revision>1.0.0-SNAPSHOT</revision>
        <maven-scm-plugin.version>2.0.0-M3</maven-scm-plugin.version>
    </properties>

    <profiles>
        <profile>
            <id>checkout1</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <version>${maven-scm-plugin.version}</version>
                        <configuration>
                            <basedir>${project.basedir}</basedir>
                            <skipCheckoutIfExists>true</skipCheckoutIfExists>
                            <checkoutDirectory>${project.basedir}/test-automation-fwk</checkoutDirectory>
                            <connectionUrl>scm:git:git@github.com:vietnd96/test-automation-fwk.git</connectionUrl>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>checkout2</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <version>${maven-scm-plugin.version}</version>
                        <configuration>
                            <basedir>${project.basedir}</basedir>
                            <skipCheckoutIfExists>true</skipCheckoutIfExists>
                            <checkoutDirectory>${project.basedir}/test-java2robot-adapter</checkoutDirectory>
                            <connectionUrl>scm:git:git@github.com:vietnd96/test-java2robot-adapter.git</connectionUrl>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>checkout3</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <version>${maven-scm-plugin.version}</version>
                        <configuration>
                            <basedir>${project.basedir}</basedir>
                            <skipCheckoutIfExists>true</skipCheckoutIfExists>
                            <checkoutDirectory>${project.basedir}/test-robot-framework</checkoutDirectory>
                            <connectionUrl>scm:git:git@github.com:vietnd96/test-robot-framework.git</connectionUrl>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>checkout4</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <version>${maven-scm-plugin.version}</version>
                        <configuration>
                            <basedir>${project.basedir}</basedir>
                            <skipCheckoutIfExists>true</skipCheckoutIfExists>
                            <checkoutDirectory>${project.basedir}/test-webdriver-downloader</checkoutDirectory>
                            <connectionUrl>scm:git:git@github.com:vietnd96/test-webdriver-downloader.git</connectionUrl>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>